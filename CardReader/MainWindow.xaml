<Window x:Class="CardReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardReader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="184*"/>
        </Grid.RowDefinitions>
        <Button x:Name="UploadImageBtn" Content="Upload Image" Margin="0,0,10,68" Click="Button_Click" HorizontalAlignment="Right" Width="102" Height="22" VerticalAlignment="Bottom" Grid.Row="1"/>
        <Image Name="TestImage" Height="399" Margin="10,10,469,0" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <TextBox x:Name="JsonExample" Margin="0,0,0,95" TextWrapping="Wrap" Text="TextBox" HorizontalAlignment="Right" Width="320" Grid.RowSpan="2"/>
        <Button x:Name="DownloadButton" Content="Download JSON" Margin="0,0,138,68" Click="DownloadButton_Click" HorizontalAlignment="Right" Width="90" Height="20" VerticalAlignment="Bottom" Grid.Row="1"/>
        <Button x:Name="ResetBtn" Content="Reset" Margin="0,0,254,63" Click="ResetBtn_Click" HorizontalAlignment="Right" Width="33" Height="20" VerticalAlignment="Bottom" Grid.Row="1"/>
        <ComboBox x:Name="ModeSelectorBox" HorizontalAlignment="Center" Margin="0,0,0,24" Grid.Row="1" VerticalAlignment="Bottom" Width="120" SelectedIndex="0">
            <ComboBoxItem Content="AI Reader"/>
            <ComboBoxItem Content="Update"/>
        </ComboBox>
        <Button x:Name="NextImageBtn" Content="Next image" HorizontalAlignment="Right" Margin="0,0,17,10" Grid.Row="1" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
